#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE    dc={{ openldap_domain_prefix }},dc={{ openldap_domain_suffix }}
{% if openldap_with_ssl %}
URI     ldaps://localhost
TLS_REQCERT never
{% endif %}
{% if not openldap_with_ssl %}
URI     ldap://localhost
{% endif %}

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never

# TLS certificates (needed for GnuTLS)
TLS_CACERT      /etc/ssl/certs/ca-certificates.crt